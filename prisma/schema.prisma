generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model School {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(255) // school name
  address    String   @db.VarChar(500) // full address
  city       String   @db.VarChar(100)
  state      String   @db.VarChar(100)
  contact    String   @db.VarChar(20)  // phone number
  image      String   @db.VarChar(255) // file path or URL
  email_id   String   @unique @db.VarChar(255)

  // Optional metadata
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

